<!DOCTYPE html>
<html>
  <head>
    <title>Courseapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>      
  </head>

  <body>   
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="container-fluid">
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        
        <%=link_to "Online Courses",root_path ,class: 'navbar-brand' %>
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class="nav-item active">
          <%=link_to "Courses",root_path ,class: 'nav-link' %>
          </li>
          <%if !logged_in? %>
          <li class="nav-item">
            
            <%=link_to "Signup",new_student_path ,class: 'nav-link' %>
          </li>
          <%end%>
          <%if logged_in? %>
          <li class="nav-item">
            
            <%=link_to "Logout",logout_path,method: :delete ,class: 'nav-link' %>
          </li>
          <% else %>

          <li class="nav-item">
            
            <%=link_to "Login",login_path,class: 'nav-link' %>
          </li>

          <%end%>

          <li class="nav-item">
            
            <%=link_to "About",about_path ,class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <% if logged_in? %>
            <%=link_to "Students",students_path ,class: 'nav-link' %>
            <%end %>
          </li>
        </ul>
        
      </div>
      </div>
  </nav>
  
    <% flash.each do |key,msg|%>
    <div class="alert alert-success" role="alert">
      <%=msg %>
    </div>
    <%end%>
    <div class="container-fluid">
      <%= yield %>
    </div>
    

  
  </body>
</html>
